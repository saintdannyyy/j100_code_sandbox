# Deny all direct access to SQLite database files
<FilesMatch "\.db$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Block directory listing
Options -Indexes

# Deny all access to this directory
<IfModule mod_authz_core.c>
    Require all denied
</IfModule>
<IfModule !mod_authz_core.c>
    Order deny,allow
    Deny from all
</IfModule>
